<h2>Order pizza</h2>

<!-- THE ACTION AND THE METHOD MUST MATCH WHAT THE CONTROLLER DOES -->
<form action="/pizza" method="post" accept-charset="utf-8">

  <label>First Name:</label>
  <input type="text" name="first_name">
  <label>Last Name:</label>
  <input type="text" name="last_name">

  <select name="pizza_type">
    <option value="margherita">Margherita</option>
    <option value="pepperoni">Pepperonni</option>
    <option value="meat_the_maker">Meat the Maker</option>
  </select>

  <label>Quantity:</label>
  <input type="number" name="quantity"></input>

  <input type="submit" value="Order">

</form>