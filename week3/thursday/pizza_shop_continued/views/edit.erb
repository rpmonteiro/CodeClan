<h2>Edit pizza order</h2>

<!-- Dynamic routes.. sweet -->
<form action="/pizza/<%= @pizza.id %>" method="post" accept-charset="utf-8">

  <label>First Name:</label>
  <input type="text" name="first_name" value="<%= @pizza.first_name %>">
  <label>Last Name:</label>
  <input type="text" name="last_name" value="<%= @pizza.last_name %>">

  <select name="pizza_type">
    <option value="margherita">Margherita</option>
    <option value="pepperoni">Pepperonni</option>
    <option value="meat_the_maker">Meat the Maker</option>
  </select>

  <label>Quantity:</label>
  <input type="number" name="quantity" value="<%= @pizza.quantity %>"></input>

  <input type="submit" value="Update">

</form>